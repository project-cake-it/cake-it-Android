<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.shop.ShopDetailActivityd">

    <data>
        <variable
            name="vm"
            type="com.cakeit.cakitandroid.presentation.shop.ShopDetailViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/TabTheme">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:expandedTitleMarginBottom="20dp"
                app:expandedTitleMarginStart="15dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/left_vertical_guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="24dp"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/left_horizontal_guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_begin="52dp"/>

                    <TextView
                        android:id="@+id/tv_shop_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:fontFamily="@font/spoqa_han_sans_bold"
                        android:textColor="@color/accentText"
                        android:letterSpacing="-0.03"
                        android:text="@{vm.shopDetailData.name}"
                        android:layout_marginTop="14dp"
                        app:layout_constraintTop_toBottomOf="@id/left_horizontal_guideline"
                        app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"/>

                    <ImageButton
                        android:id="@+id/btn_shop_detail_zzim"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:background="@drawable/background_zzim_effect"
                        android:layout_marginEnd="11dp"
                        android:layout_marginTop="15dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/left_horizontal_guideline"/>

                    <TextView
                        android:id="@+id/tv_shop_detail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_regular"
                        android:textSize="14sp"
                        android:textColor="@color/subText"
                        android:letterSpacing="-0.03"
                        android:layout_marginTop="4dp"
                        android:text="@{vm.shopDetailData.fullAddress}"
                        app:layout_constraintTop_toBottomOf="@id/tv_shop_detail_name"
                        app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"/>

                    <TextView
                        android:id="@+id/tv_shop_detail_zzim_cnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_regular"
                        android:textSize="12sp"
                        android:textColor="@color/defaultText"
                        android:letterSpacing="-0.03"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btn_shop_detail_zzim"/>

                    <Button
                        android:id="@+id/btn_shop_detail_order_date"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginHorizontal="20dp"
                        android:text="@string/shop_order_availability_date"
                        android:fontFamily="@font/spoqa_han_sans_regular"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"
                        android:background="@drawable/bg_order_date"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_shop_detail_address"/>

                    <View
                        android:id="@+id/view_shop_detail_first"
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:background="@color/solidLine"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/btn_shop_detail_order_date"/>

                    <TextView
                        android:id="@+id/tv_shop_detail_cake_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_bold"
                        android:textSize="13sp"
                        android:textColor="@color/accentText"
                        android:letterSpacing="-0.03"
                        android:text="@string/cake_information_title"
                        android:layout_marginTop="13dp"
                        app:layout_constraintTop_toBottomOf="@id/view_shop_detail_first"
                        app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"
                        />

                    <View
                        android:id="@+id/view_shop_detail_second"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/solidLine"
                        android:layout_marginTop="11.5dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_shop_detail_cake_info"/>

                    <TextView
                        android:id="@+id/tv_cake_detail_theme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_regular"
                        android:textSize="12sp"
                        android:textColor="@color/subText"
                        android:letterSpacing="-0.03"
                        android:text="@string/cake_information_theme"
                        android:layout_marginTop="19.5dp"
                        app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"
                        app:layout_constraintTop_toBottomOf="@id/view_shop_detail_second"
                        />
                    <TextView
                        android:id="@+id/tv_cake_detail_theme_contents"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_regular"
                        android:textSize="12sp"
                        android:textColor="@color/defaultText"
                        android:letterSpacing="-0.03"
                        android:text="@{vm.shopDetailData.themeNames}"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginTop="19.5dp"
                        android:layout_marginStart="67dp"
                        android:layout_marginEnd="12dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view_shop_detail_second"
                        app:layout_constraintLeft_toRightOf="@id/tv_cake_detail_theme"
                        />

                    <TextView
                        android:id="@+id/tv_cake_detail_size_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_regular"
                        android:textSize="12sp"
                        android:textColor="@color/subText"
                        android:letterSpacing="-0.03"
                        android:text="@string/cake_information_price_by_size"
                        android:layout_marginTop="12dp"
                        app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"
                        app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_theme_contents"
                        />
                    <TextView
                        android:id="@+id/tv_cake_detail_size_price_contents"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_regular"
                        android:textSize="12sp"
                        android:textColor="@color/defaultText"
                        android:letterSpacing="-0.03"
                        android:text="미니(12cm)/15,000원\n1호(15cm)/24,000원\n2호(18cm)/32,000원\n3호(20cm)/40,000원"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="67dp"
                        android:layout_marginEnd="12dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_theme_contents"
                        app:layout_constraintLeft_toRightOf="@id/tv_cake_detail_theme"
                        />

                    <TextView
                        android:id="@+id/tv_cake_detail_cream_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_regular"
                        android:textSize="12sp"
                        android:textColor="@color/subText"
                        android:letterSpacing="-0.03"
                        android:text="@string/cake_information_cream_type"
                        android:layout_marginTop="12dp"
                        app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"
                        app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_size_price_contents"
                        />
                    <TextView
                        android:id="@+id/tv_cake_detail_cream_type_contents"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_regular"
                        android:textSize="12sp"
                        android:textColor="@color/defaultText"
                        android:letterSpacing="-0.03"
                        android:text="@{vm.shopDetailData.creamNames}"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="67dp"
                        android:layout_marginEnd="12dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_size_price_contents"
                        app:layout_constraintLeft_toRightOf="@id/tv_cake_detail_theme"
                        app:layout_constraintRight_toRightOf="parent"
                        />

                    <TextView
                        android:id="@+id/tv_shop_detail_sheet_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_regular"
                        android:textSize="12sp"
                        android:textColor="@color/subText"
                        android:letterSpacing="-0.03"
                        android:text="@string/cake_information_sheet_type"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="12dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"
                        app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_cream_type_contents"
                        />
                    <TextView
                        android:id="@+id/tv_shop_detail_sheet_type_contents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_regular"
                        android:textSize="12sp"
                        android:textColor="@color/defaultText"
                        android:letterSpacing="-0.03"
                        android:text="@{vm.shopDetailData.sheetNames}"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="67dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_cream_type_contents"
                        app:layout_constraintLeft_toRightOf="@id/tv_cake_detail_theme"
                        />

                    <View
                        android:id="@+id/view_shop_detail_third"
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:background="@color/solidLine"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_shop_detail_sheet_type_contents"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    app:contentInsetStart="0dp"
                    app:contentInsetStartWithNavigation="0dp"
                    app:layout_collapseMode="pin"
                    android:background="@color/white">

                    <ImageButton
                        android:id="@+id/btn_shop_detail_back"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:background="@drawable/ic_arrow_left"
                        android:layout_marginStart="8dp"/>

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tl_shop_detail_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                app:tabTextColor="@color/defaultText"
                app:tabSelectedTextColor="@color/colorPrimary"
                app:tabTextAppearance="@style/TabText"/>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_shop_detail_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <RelativeLayout
            android:id="@+id/rl_shop_detail_connect"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_connect_shop"
            android:layout_marginBottom="16dp"
            android:layout_gravity="bottom"
            android:letterSpacing="-0.03"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                >

                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_kakao_channel"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_bold"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:text="@string/shop_connect"
                    android:layout_marginStart="6dp"
                    />

            </LinearLayout>
        </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>