<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.shop.ShopDetailActivity">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="24dp"/>

    <ImageButton
        android:id="@+id/back"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/ic_arrow_left"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#242424"
            android:letterSpacing="-0.03"
            android:text="케이크가게이름"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@id/back"
            app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"/>

    <ImageButton
        android:id="@+id/heart"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/ic_heart"
        android:layout_marginRight="11dp"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#909090"
        android:letterSpacing="-0.03"
        android:layout_marginTop="4dp"
        android:text="서울특별시 마포구 **동 123-45"
        app:layout_constraintTop_toBottomOf="@id/shop_name"
        app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"/>

    <TextView
        android:id="@+id/like_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#3d3d3d"
        android:letterSpacing="-0.03"
        android:gravity="center_horizontal"
        android:text="132"
        android:layout_marginTop="2dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heart"/>

    <Button
        android:id="@+id/check_date"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="주문 가능 날짜 보기"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address"/>

    <View
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="#f5f5f5"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/check_date"/>

    <TextView
        android:id="@+id/cake_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="#242424"
        android:letterSpacing="-0.03"
        tools:text="케이크 정보"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/first"
        app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"
        />

    <View
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f1f1f1"
        android:layout_marginTop="11.5dp"
        app:layout_constraintTop_toBottomOf="@id/cake_detail"/>

    <TextView
        android:id="@+id/theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#909090"
        android:letterSpacing="-0.03"
        android:text="테마"
        android:layout_marginTop="19.5dp"
        app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@id/second"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#3d3d3d"
        android:letterSpacing="-0.03"
        tools:text="#생일 #축하 #연인 #기념일 #기타 #노랑 "
        android:layout_marginTop="19.5dp"
        android:layout_marginLeft="67dp"
        app:layout_constraintTop_toBottomOf="@id/second"
        app:layout_constraintLeft_toRightOf="@id/theme"
        />

    <TextView
        android:id="@+id/size_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#909090"
        android:letterSpacing="-0.03"
        android:text="크기별 가격"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@id/theme"
        />
    <TextView
        android:id="@+id/size_cost_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#3d3d3d"
        android:letterSpacing="-0.03"
        tools:text="미니(12cm)/15,000원\n1호(15cm)/24,000원\n2호(18cm)/32,000원\n3호(20cm)/40,000원"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="67dp"
        app:layout_constraintTop_toBottomOf="@id/theme"
        app:layout_constraintLeft_toRightOf="@id/theme"
        />

    <TextView
        android:id="@+id/cream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#909090"
        android:letterSpacing="-0.03"
        android:text="크림 종류"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@id/size_cost_detail"
        />
    <TextView
        android:id="@+id/cream_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#3d3d3d"
        android:letterSpacing="-0.03"
        tools:text="바닐라, 초코, 오레오"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="67dp"
        app:layout_constraintTop_toBottomOf="@id/size_cost_detail"
        app:layout_constraintLeft_toRightOf="@id/theme"
        />

    <TextView
        android:id="@+id/sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#909090"
        android:letterSpacing="-0.03"
        android:text="크림 종류"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@id/cream_detail"
        />
    <TextView
        android:id="@+id/sheet_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#3d3d3d"
        android:letterSpacing="-0.03"
        tools:text="바닐라, 초코, 오레오"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="67dp"
        app:layout_constraintTop_toBottomOf="@id/cream_detail"
        app:layout_constraintLeft_toRightOf="@id/theme"
        />

    <View
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="#f5f5f5"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/sheet_detail"/>


</androidx.constraintlayout.widget.ConstraintLayout>