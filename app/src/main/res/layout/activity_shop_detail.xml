<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.shop.ShopDetailActivityd">

    <data>
        <variable
            name="vm"
            type="com.cakeit.cakitandroid.presentation.shop.ShopDetailViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/left_vertical_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="24dp"/>

            <ImageButton
                android:id="@+id/btn_shop_detail_back"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/ic_arrow_left"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="7dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/tv_shop_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/spoqa_han_sans_bold"
                    android:textColor="@color/accentText"
                    android:letterSpacing="-0.03"
                    android:text="@string/shop_title"
                    android:layout_marginTop="21dp"
                    app:layout_constraintTop_toBottomOf="@id/btn_shop_detail_back"
                    app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"/>

            <ImageButton
                android:id="@+id/btn_shop_detail_zzim"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/ic_heart"
                android:layout_marginRight="11dp"
                android:layout_marginTop="15dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_shop_detail_back"/>

            <TextView
                android:id="@+id/tv_shop_detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:textSize="14sp"
                android:textColor="@color/subText"
                android:letterSpacing="-0.03"
                android:layout_marginTop="4dp"
                android:text="서울특별시 마포구 **동 123-45"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_detail_name"
                app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"/>

            <TextView
                android:id="@+id/tv_shop_detail_zzim_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:textSize="12sp"
                android:textColor="@color/defaultText"
                android:letterSpacing="-0.03"
                android:gravity="center_horizontal"
                android:text="132"
                android:layout_marginTop="2dp"
                android:layout_marginRight="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_shop_detail_zzim"/>

            <Button
                android:id="@+id/btn_shop_detail_order_date"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="20dp"
                android:text="@string/shop_order_availability_date"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/bg_order_date"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_detail_address"/>

            <View
                android:id="@+id/view_shop_detail_first"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@color/solidLine"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/btn_shop_detail_order_date"/>

            <TextView
                android:id="@+id/tv_shop_detail_cake_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_bold"
                android:textSize="13sp"
                android:textColor="@color/accentText"
                android:letterSpacing="-0.03"
                android:text="@string/cake_information_title"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/view_shop_detail_first"
                app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"
                />

            <View
                android:id="@+id/view_shop_detail_second"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/solidLine"
                android:layout_marginTop="11.5dp"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_detail_cake_info"/>

            <TextView
                android:id="@+id/tv_cake_detail_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:textSize="12sp"
                android:textColor="@color/subText"
                android:letterSpacing="-0.03"
                android:text="@string/cake_information_theme"
                android:layout_marginTop="19.5dp"
                app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"
                app:layout_constraintTop_toBottomOf="@id/view_shop_detail_second"
                />
            <TextView
                android:id="@+id/tv_cake_detail_theme_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:textSize="12sp"
                android:textColor="@color/defaultText"
                android:letterSpacing="-0.03"
                android:text="#생일 #축하 #연인 #기념일 #기타 #노랑 "
                android:layout_marginTop="19.5dp"
                android:layout_marginLeft="67dp"
                app:layout_constraintTop_toBottomOf="@id/view_shop_detail_second"
                app:layout_constraintLeft_toRightOf="@id/tv_cake_detail_theme"
                />

            <TextView
                android:id="@+id/tv_cake_detail_size_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:textSize="12sp"
                android:textColor="@color/subText"
                android:letterSpacing="-0.03"
                android:text="@string/cake_information_price_by_size"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"
                app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_theme_contents"
                />
            <TextView
                android:id="@+id/tv_cake_detail_size_price_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:textSize="12sp"
                android:textColor="@color/defaultText"
                android:letterSpacing="-0.03"
                android:text="미니(12cm)/15,000원\n1호(15cm)/24,000원\n2호(18cm)/32,000원\n3호(20cm)/40,000원"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="67dp"
                app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_theme_contents"
                app:layout_constraintLeft_toRightOf="@id/tv_cake_detail_theme"
                />

            <TextView
                android:id="@+id/tv_cake_detail_cream_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:textSize="12sp"
                android:textColor="@color/subText"
                android:letterSpacing="-0.03"
                android:text="크림 종류"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"
                app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_size_price_contents"
                />
            <TextView
                android:id="@+id/tv_cake_detail_cream_type_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:textSize="12sp"
                android:textColor="@color/defaultText"
                android:letterSpacing="-0.03"
                android:text="바닐라, 초코, 오레오"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="67dp"
                app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_size_price_contents"
                app:layout_constraintLeft_toRightOf="@id/tv_cake_detail_theme"
                />

            <TextView
                android:id="@+id/tv_shop_detail_sheet_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:textSize="12sp"
                android:textColor="@color/subText"
                android:letterSpacing="-0.03"
                android:text="@string/cake_information_sheet_type"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"
                app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_cream_type_contents"
                />
            <TextView
                android:id="@+id/tv_shop_detail_sheet_type_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:textSize="12sp"
                android:textColor="@color/defaultText"
                android:letterSpacing="-0.03"
                android:text="바닐라, 초코, 오레오"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="67dp"
                app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_cream_type_contents"
                app:layout_constraintLeft_toRightOf="@id/tv_cake_detail_theme"
                />

            <View
                android:id="@+id/view_shop_detail_third"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@color/solidLine"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_detail_sheet_type_contents"/>

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/abl_shop_detail_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:theme="@style/TabTheme"
                app:layout_constraintTop_toBottomOf="@id/view_shop_detail_third">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tl_shop_detail_tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:tabTextColor="@color/defaultText"
                    app:tabSelectedTextColor="@color/colorPrimary"
                    app:tabTextAppearance="@style/TabText"/>

            </com.google.android.material.appbar.AppBarLayout>

            <!--android:layout_height="429dp"-->
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp_shop_detail_viewpager"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:background="@android:color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/abl_shop_detail_tab_layout"/>
            <!--
            <Button
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/spoqa_han_sans_bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:letterSpacing="-0.03"
                android:text="가게 연결"
                android:background="@drawable/bg_connect_shop"
                android:layout_marginBottom="40dp"
                app:layout_constraintBottom_toBottomOf="@id/vp_shop_detail_viewpager"/>
-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>