<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.cakeit.cakitandroid.presentation.search.searchlist.design.SearchDesignViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_search_design_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:visibility="visible"
        >

        <HorizontalScrollView
            android:id="@+id/sv_filter_btn_search_design"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/btn_filter_default_search_design"
                    android:layout_width="82dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/background_filter_btn_effect_before"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_filter_default_title_search_design"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="기본순"
                    android:textColor="#242424"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@id/btn_filter_default_search_design"
                    app:layout_constraintEnd_toStartOf="@id/btn_filter_default_compact_search_design"
                    app:layout_constraintStart_toStartOf="@id/btn_filter_default_search_design"
                    app:layout_constraintTop_toTopOf="@id/btn_filter_default_search_design" />

                <Button
                    android:id="@+id/btn_filter_default_compact_search_design"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/background_filter_compact_before"
                    android:enabled="false"
                    app:layout_constraintBottom_toBottomOf="@id/btn_filter_default_search_design"
                    app:layout_constraintEnd_toEndOf="@id/btn_filter_default_search_design"
                    app:layout_constraintStart_toEndOf="@id/tv_filter_default_title_search_design"
                    app:layout_constraintTop_toTopOf="@id/btn_filter_default_search_design" />

                <RelativeLayout
                    android:id="@+id/btn_filter_pickup_region_search_design"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/background_filter_btn_effect_before"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_filter_default_search_design"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_filter_pickup_region_title_search_design"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="지역"
                    android:textColor="#242424"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@id/btn_filter_pickup_region_search_design"
                    app:layout_constraintEnd_toStartOf="@id/btn_filter_pickup_region_compact_search_design"
                    app:layout_constraintStart_toStartOf="@id/btn_filter_pickup_region_search_design"
                    app:layout_constraintTop_toTopOf="@id/btn_filter_pickup_region_search_design" />

                <Button
                    android:id="@+id/btn_filter_pickup_region_compact_search_design"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/background_filter_compact_before"
                    android:enabled="false"
                    app:layout_constraintBottom_toBottomOf="@id/btn_filter_pickup_region_search_design"
                    app:layout_constraintEnd_toEndOf="@id/btn_filter_pickup_region_search_design"
                    app:layout_constraintStart_toEndOf="@id/tv_filter_pickup_region_title_search_design"
                    app:layout_constraintTop_toTopOf="@id/btn_filter_pickup_region_search_design" />

                <RelativeLayout
                    android:id="@+id/btn_filter_size_search_design"
                    android:layout_width="66dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/background_filter_btn_effect_before"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_filter_pickup_region_search_design"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_filter_size_title_search_design"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="크기"
                    android:textColor="#242424"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@id/btn_filter_size_search_design"
                    app:layout_constraintEnd_toStartOf="@id/btn_filter_size_compact_search_design"
                    app:layout_constraintStart_toStartOf="@id/btn_filter_size_search_design"
                    app:layout_constraintTop_toTopOf="@id/btn_filter_size_search_design" />

                <Button
                    android:id="@+id/btn_filter_size_compact_search_design"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/background_filter_compact_before"
                    android:enabled="false"
                    app:layout_constraintBottom_toBottomOf="@id/btn_filter_size_search_design"
                    app:layout_constraintEnd_toEndOf="@id/btn_filter_size_search_design"
                    app:layout_constraintStart_toEndOf="@id/tv_filter_size_title_search_design"
                    app:layout_constraintTop_toTopOf="@id/btn_filter_size_search_design" />

                <RelativeLayout
                    android:id="@+id/btn_filter_color_search_design"
                    android:layout_width="66dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/background_filter_btn_effect_before"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_filter_size_search_design"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_filter_color_title_search_design"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="색깔"
                    android:textColor="#242424"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@id/btn_filter_color_search_design"
                    app:layout_constraintEnd_toStartOf="@id/btn_filter_color_compact_search_design"
                    app:layout_constraintStart_toStartOf="@id/btn_filter_color_search_design"
                    app:layout_constraintTop_toTopOf="@id/btn_filter_color_search_design" />

                <Button
                    android:id="@+id/btn_filter_color_compact_search_design"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/background_filter_compact_before"
                    android:enabled="false"
                    app:layout_constraintBottom_toBottomOf="@id/btn_filter_color_search_design"
                    app:layout_constraintEnd_toEndOf="@id/btn_filter_color_search_design"
                    app:layout_constraintStart_toEndOf="@id/tv_filter_color_title_search_design"
                    app:layout_constraintTop_toTopOf="@id/btn_filter_color_search_design" />

                <RelativeLayout
                    android:id="@+id/btn_filter_category_search_design"
                    android:layout_width="94dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/background_filter_btn_effect_before"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_filter_color_search_design"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_filter_category_title_search_design"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="카테고리"
                    android:textColor="#242424"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@id/btn_filter_category_search_design"
                    app:layout_constraintEnd_toStartOf="@id/btn_filter_category_compact_search_design"
                    app:layout_constraintStart_toStartOf="@id/btn_filter_category_search_design"
                    app:layout_constraintTop_toTopOf="@id/btn_filter_category_search_design" />

                <Button
                    android:id="@+id/btn_filter_category_compact_search_design"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/background_filter_compact_before"
                    android:enabled="false"
                    app:layout_constraintBottom_toBottomOf="@id/btn_filter_category_search_design"
                    app:layout_constraintEnd_toEndOf="@id/btn_filter_category_search_design"
                    app:layout_constraintStart_toEndOf="@id/tv_filter_category_title_search_design"
                    app:layout_constraintTop_toTopOf="@id/btn_filter_category_search_design" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/sv_choice_tag_search_design"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:layout_constraintTop_toBottomOf="@+id/sv_filter_btn_search_design"
            android:visibility="gone"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_choice_tag_search_design"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    />

            </RelativeLayout>

        </HorizontalScrollView>

        <View
            android:id="@+id/view_background_search_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d5d5d5"
            app:layout_constraintTop_toBottomOf="@id/sv_choice_tag_search_design"
            android:visibility="invisible"
            />
        <RelativeLayout
            android:id="@+id/rv_content_search_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sv_choice_tag_search_design"
            >

            <RelativeLayout
                android:id="@+id/rl_search_design_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/tv_search_design_top_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="검색 결과가 없어요"
                    android:textSize="14sp"
                    android:textColor="#242424"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:id="@+id/tv_search_design_bottom_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다른 키워드로 검색해보세요!"
                    android:textSize="14sp"
                    android:textColor="#242424"
                    android:layout_below="@+id/tv_search_design_top_empty"
                    android:fontFamily="@font/spoqa_han_sans_neo_regular"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_search_design_not_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_design_list_search_design"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_filter_content_search_design"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_filter_layer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="gone"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_filter_default_list_search_design"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:visibility="gone"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_filter_region_list_search_design"
                        android:layout_width="match_parent"
                        android:layout_height="309dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:visibility="gone"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_filter_size_list_search_design"
                        android:layout_width="match_parent"
                        android:layout_height="387dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:visibility="gone"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_filter_color_list_search_design"
                        android:layout_width="match_parent"
                        android:layout_height="353dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:visibility="gone"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_filter_category_list_search_design"
                        android:layout_width="match_parent"
                        android:layout_height="233dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:visibility="gone"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>