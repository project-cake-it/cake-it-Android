<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.cakeit.cakitandroid.presentation.search.searchlist.design.SearchDesignViewModel" />
    </data>
    <LinearLayout
        android:id="@+id/ll_search_design_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <HorizontalScrollView
                    android:id="@+id/sv_filter_btn_search_design"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="13dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <RelativeLayout
                            android:id="@+id/rl_filter_refresh_search_design"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginStart="16dp"
                            android:background="@drawable/background_filter_btn_effect_before"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="10dp"
                                >
                                <TextView
                                    android:id="@+id/tv_refresh_title_search_design"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="초기화"
                                    android:textColor="#242424"
                                    android:textSize="13sp"
                                    />

                                <Button
                                    android:id="@+id/btn_refresh_search_design"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/ic_reset"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <View
                            android:id="@+id/view_filter_first_search_design"
                            android:layout_width="1dp"
                            android:layout_height="29dp"
                            android:layout_marginStart="7.5dp"
                            android:background="#eeeeee"
                            android:layout_marginTop="3dp"
                            />

                        <RelativeLayout
                            android:id="@+id/rl_filter_default_search_design"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginStart="7.5dp"
                            android:background="@drawable/background_filter_btn_effect_before"
                            android:textSize="13sp"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="10dp"
                                >
                                <TextView
                                    android:id="@+id/tv_filter_default_title_search_design"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="기본순"
                                    android:textColor="#242424"
                                    android:textSize="13sp"
                                    />

                                <Button
                                    android:id="@+id/btn_filter_default_compact_search_design"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/background_filter_compact_before"
                                    android:enabled="false"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rl_filter_pickup_region_search_design"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/background_filter_btn_effect_before"
                            android:textSize="13sp"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="10dp"
                                >
                                <TextView
                                    android:id="@+id/tv_filter_pickup_region_title_search_design"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="지역"
                                    android:textColor="#242424"
                                    android:textSize="13sp"
                                    />
                                <Button
                                    android:id="@+id/btn_filter_pickup_region_compact_search_design"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/background_filter_compact_before"
                                    android:enabled="false"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rl_filter_size_search_design"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/background_filter_btn_effect_before"
                            android:textSize="13sp"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="10dp"
                                >
                                <TextView
                                    android:id="@+id/tv_filter_size_title_search_design"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="크기"
                                    android:textColor="#242424"
                                    android:textSize="13sp"
                                    />

                                <Button
                                    android:id="@+id/btn_filter_size_compact_search_design"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/background_filter_compact_before"
                                    android:enabled="false"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rl_filter_color_search_design"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/background_filter_btn_effect_before"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="10dp"
                                >
                                <TextView
                                    android:id="@+id/tv_filter_color_title_search_design"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="색깔"
                                    android:textColor="#242424"
                                    android:textSize="13sp"
                                    />

                                <Button
                                    android:id="@+id/btn_filter_color_compact_search_design"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/background_filter_compact_before"
                                    android:enabled="false"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rl_filter_category_search_design"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/background_filter_btn_effect_before"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="10dp"
                                >
                                <TextView
                                    android:id="@+id/tv_filter_category_title_search_design"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="카테고리"
                                    android:textColor="#242424"
                                    android:textSize="13sp"
                                    />
                                <Button
                                    android:id="@+id/btn_filter_category_compact_search_design"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/background_filter_compact_before"
                                    android:enabled="false"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_choice_tag_search_design"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="16dp"
                            android:visibility="gone"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_design_list_search_design"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                            <TextView
                                android:id="@+id/tv_empty_search_design"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spoqa_han_sans_neo_regular"
                                android:lineSpacingExtra="8dp"
                                android:text="검색 결과가 없어요\n
다른 키워드로 검색해보세요!"
                                android:textColor="@color/accentText"
                                android:layout_centerInParent="true"
                                android:visibility="gone"
                                android:gravity="center"
                                />
                            <ProgressBar
                                android:id="@+id/pb_loading_search_design"
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                style="?android:attr/progress"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <View
                        android:id="@+id/view_background_search_design"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#80000000"
                        android:visibility="invisible"
                        />
                    <RelativeLayout
                        android:id="@+id/rl_filter_content_search_design"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_filter_layer"
                        android:visibility="invisible"
                        >

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_filter_default_list_search_design"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:visibility="invisible"
                            />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_filter_region_list_search_design"
                            android:layout_width="match_parent"
                            android:layout_height="309dp"
                            android:visibility="gone"
                            />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_filter_size_list_search_design"
                            android:layout_width="match_parent"
                            android:layout_height="387dp"
                            android:visibility="gone"
                            />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_filter_color_list_search_design"
                            android:layout_width="match_parent"
                            android:layout_height="353dp"
                            android:visibility="gone"
                            />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_filter_category_list_search_design"
                            android:layout_width="match_parent"
                            android:layout_height="233dp"
                            android:visibility="gone"
                            />
                    </RelativeLayout>
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>