<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.cakeit.cakitandroid.presentation.list.designlist.DesignListViewModel" />
    </data>
    <LinearLayout
        android:id="@+id/ll_design_list_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.list.designlist.DesignListActivity"
        android:background="#ffffff"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="7dp"
            >
            <Button
                android:id="@+id/btn_back_design_list"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/ic_arrow_left"
                android:layout_marginStart="8dp"
                android:layout_marginTop="7dp"
                android:layout_centerVertical="true"
                />
            <LinearLayout
                android:id="@+id/ll_design_title_design_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:id="@+id/tv_design_title_design_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생일"
                    android:textSize="16sp"
                    android:textColor="#242424"
                    android:textStyle="bold"
                    android:fontFamily="@font/spoqa_han_sans_bold"
                    />
                <Button
                    android:id="@+id/btn_design_name_design_list"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/background_filter_compact_theme"
                    android:layout_marginStart="1dp"
                    />
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <HorizontalScrollView
                    android:id="@+id/sv_filter_btn_design_list"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="21dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <RelativeLayout
                            android:id="@+id/rl_filter_refresh_design_list"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginStart="16dp"
                            android:background="@drawable/background_filter_btn_effect_before"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="10dp"
                                >
                                <TextView
                                    android:id="@+id/tv_refresh_title_design_list"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="초기화"
                                    android:textColor="#242424"
                                    android:textSize="13sp"
                                    />

                                <Button
                                    android:id="@+id/btn_refresh_design_list"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/ic_reset"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <View
                            android:id="@+id/view_filter_first_design_list"
                            android:layout_width="1dp"
                            android:layout_height="29dp"
                            android:layout_marginStart="7.5dp"
                            android:background="#eeeeee"
                            />

                        <RelativeLayout
                            android:id="@+id/rl_filter_default_design_list"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginStart="7.5dp"
                            android:background="@drawable/background_filter_btn_effect_before"
                            android:textSize="13sp"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="10dp"
                                >
                                <TextView
                                    android:id="@+id/tv_filter_default_title_design_list"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="기본순"
                                    android:textColor="#242424"
                                    android:textSize="13sp"
                                    />

                                <Button
                                    android:id="@+id/btn_filter_default_compact_design_list"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/background_filter_compact_before"
                                    android:enabled="false"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rl_filter_pickup_region_design_list"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/background_filter_btn_effect_before"
                            android:textSize="13sp"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="10dp"
                                >
                                <TextView
                                    android:id="@+id/tv_filter_pickup_region_title_design_list"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="픽업 지역"
                                    android:textColor="#242424"
                                    android:textSize="13sp"
                                    />
                                <Button
                                    android:id="@+id/btn_filter_pickup_region_compact_design_list"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/background_filter_compact_before"
                                    android:enabled="false"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rl_filter_size_design_list"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/background_filter_btn_effect_before"
                            android:textSize="13sp"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="10dp"
                                >
                                <TextView
                                    android:id="@+id/tv_filter_size_title_design_list"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="크기"
                                    android:textColor="#242424"
                                    android:textSize="13sp"
                                    />

                                <Button
                                    android:id="@+id/btn_filter_size_compact_design_list"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/background_filter_compact_before"
                                    android:enabled="false"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rl_filter_color_design_list"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/background_filter_btn_effect_before"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="10dp"
                                >
                                <TextView
                                    android:id="@+id/tv_filter_color_title_design_list"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="색깔"
                                    android:textColor="#242424"
                                    android:textSize="13sp"
                                    />

                                <Button
                                    android:id="@+id/btn_filter_color_compact_design_list"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/background_filter_compact_before"
                                    android:enabled="false"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rl_filter_category_design_list"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/background_filter_btn_effect_before"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="10dp"
                                >
                                <TextView
                                    android:id="@+id/tv_filter_category_title_design_list"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="카테고리"
                                    android:textColor="#242424"
                                    android:textSize="13sp"
                                    />
                                <Button
                                    android:id="@+id/btn_filter_category_compact_design_list"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/background_filter_compact_before"
                                    android:enabled="false"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_choice_tag_design_list"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="16dp"
                            android:visibility="gone"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_design_list_design_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                            <TextView
                                android:id="@+id/tv_empty_design_list"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spoqa_han_sans_neo_regular"
                                android:lineSpacingExtra="8dp"
                                android:text="해당 조건의 디자인이 없어요\n
다른 필터로 찾아보세요!"
                                android:textColor="@color/accentText"
                                android:layout_centerInParent="true"
                                android:visibility="gone"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <View
                        android:id="@+id/view_background_design_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#80000000"
                        android:visibility="invisible"
                        />
                    <RelativeLayout
                        android:id="@+id/rl_filter_content_design_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_filter_layer"
                        android:visibility="invisible"
                        >

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_filter_default_list_design_list"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:visibility="invisible"
                            />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_filter_region_list_design_list"
                            android:layout_width="match_parent"
                            android:layout_height="309dp"
                            android:visibility="gone"
                            />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_filter_size_list_design_list"
                            android:layout_width="match_parent"
                            android:layout_height="387dp"
                            android:visibility="gone"
                            />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_filter_color_list_design_list"
                            android:layout_width="match_parent"
                            android:layout_height="353dp"
                            android:visibility="gone"
                            />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_filter_category_list_design_list"
                            android:layout_width="match_parent"
                            android:layout_height="233dp"
                            android:visibility="gone"
                            />
                    </RelativeLayout>
                </FrameLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_theme_content_design_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_filter_layer"
                android:visibility="invisible"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_theme_list_design_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="36dp"
                    android:visibility="visible"
                    />
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>
</layout>
