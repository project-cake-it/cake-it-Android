<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.login.LoginActivity">
    <data>
        <variable
            name="viewModel"
            type="com.cakeit.cakitandroid.presentation.login.LoginViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/iv_login_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/bg_login_image_1" />

        <TextView
            android:id="@+id/tv_login_eixt"
            android:layout_width="219dp"
            android:layout_height="39dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/spoqa_han_sans_medium"
            android:text="먼저 둘러볼게요"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_login_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_login_buttons"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:id="@+id/tv_login_welcome"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:bufferType="spannable"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:text="@string/login_welcome"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_login_logo"
            app:layout_constraintVertical_bias="0.060000002" />

        <TextView
            android:id="@+id/tv_login_welcome2"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:bufferType="spannable"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:text="@string/login_welcome2"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_welcome"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_login_welcome3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:bufferType="spannable"
            android:fontFamily="@font/glacial_indifference_regular"
            android:text="cake'it"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_welcome2"
            app:layout_constraintVertical_bias="0.044" />

        <TextView
            android:id="@+id/tv_login_welcome4"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:bufferType="spannable"
            android:fontFamily="@font/spoqa_han_sans_medium"
            android:text="특별함을 선물해보세요!"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_welcome3"
            app:layout_constraintVertical_bias="0.219" />

        <TextView
            android:id="@+id/tv_login_welcome5"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:bufferType="spannable"
            android:fontFamily="@font/spoqa_han_sans_medium"
            android:text="로그인하고 시작하기"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_welcome4"
            app:layout_constraintVertical_bias="0.063" />

        <ImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="#00F7F7F7"
            android:src="@drawable/cakeit_logo_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_login_background"
            app:layout_constraintVertical_bias="0.145"
            app:srcCompat="@drawable/cakeit_logo_white" />

        <LinearLayout
            android:id="@+id/ll_login_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:paddingBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_welcome5"
            app:layout_constraintVertical_bias="0.532">

            <Button
                android:id="@+id/btn_login_naverLogin"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_round"
                android:backgroundTint="#1ec800"
                android:drawableStart="@drawable/ic_login_naver"
                android:padding="10dp" />

            <Button
                android:id="@+id/btn_login_kakaoLogin"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/bg_round"
                android:backgroundTint="#f9df32"
                android:drawableStart="@drawable/ic_login_kakao"
                android:padding="10dp" />

            <Button
                android:id="@+id/btn_login_googleLogin"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_round"
                android:backgroundTint="#ffffff"
                android:drawableStart="@drawable/ic_login_google"
                android:drawablePadding="20dp"
                android:padding="10dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

