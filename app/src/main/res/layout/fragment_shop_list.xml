<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.cakeit.cakitandroid.presentation.list.shoplist.ShopListViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_shop_list_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.list.shoplist.shopListActivity"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/tv_shop_title_shop_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="케이크가게"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp"
            android:textSize="16sp"
            android:textColor="#242424"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btn_shop_name_shop_list"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_chevron_compact_down"
            app:layout_constraintBottom_toBottomOf="@id/tv_shop_title_shop_list"
            app:layout_constraintStart_toEndOf="@id/tv_shop_title_shop_list"
            android:layout_marginStart="1dp"
            />

        <HorizontalScrollView
            android:id="@+id/sv_filter_btn_shop_list"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_shop_title_shop_list">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_filter_refresh_shop_list"
                    android:layout_width="82dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/background_filter_btn_effect_before"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_refresh_title_shop_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="초기화"
                    android:textColor="#242424"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@id/btn_filter_refresh_shop_list"
                    app:layout_constraintEnd_toStartOf="@id/btn_refresh_shop_list"
                    app:layout_constraintStart_toStartOf="@id/btn_filter_refresh_shop_list"
                    app:layout_constraintTop_toTopOf="@id/btn_filter_refresh_shop_list" />

                <Button
                    android:id="@+id/btn_refresh_shop_list"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/ic_reset"
                    app:layout_constraintBottom_toBottomOf="@id/btn_filter_refresh_shop_list"
                    app:layout_constraintEnd_toEndOf="@id/btn_filter_refresh_shop_list"
                    app:layout_constraintStart_toEndOf="@id/tv_refresh_title_shop_list"
                    app:layout_constraintTop_toTopOf="@id/btn_filter_refresh_shop_list" />

                <View
                    android:id="@+id/view_filter_first_shop_list"
                    android:layout_width="1dp"
                    android:layout_height="29dp"
                    android:layout_marginStart="7.5dp"
                    android:background="#eeeeee"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_filter_refresh_shop_list"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/btn_filter_default_shop_list"
                    android:layout_width="82dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="7.5dp"
                    android:background="@drawable/background_filter_btn_effect_before"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/view_filter_first_shop_list"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_filter_default_title_shop_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="기본순"
                    android:textColor="#242424"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@id/btn_filter_default_shop_list"
                    app:layout_constraintEnd_toStartOf="@id/btn_filter_default_compact_shop_list"
                    app:layout_constraintStart_toStartOf="@id/btn_filter_default_shop_list"
                    app:layout_constraintTop_toTopOf="@id/btn_filter_default_shop_list" />

                <Button
                    android:id="@+id/btn_filter_default_compact_shop_list"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/background_filter_compact_before"
                    app:layout_constraintBottom_toBottomOf="@id/btn_filter_default_shop_list"
                    app:layout_constraintEnd_toEndOf="@id/btn_filter_default_shop_list"
                    app:layout_constraintStart_toEndOf="@id/tv_filter_default_title_shop_list"
                    android:enabled="false"
                    app:layout_constraintTop_toTopOf="@id/btn_filter_default_shop_list" />

                <RelativeLayout
                    android:id="@+id/btn_filter_pickup_region_shop_list"
                    android:layout_width="97dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/background_filter_btn_effect_before"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_filter_default_shop_list"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_filter_pickup_region_title_shop_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="픽업 지역"
                    android:textColor="#242424"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@id/btn_filter_pickup_region_shop_list"
                    app:layout_constraintEnd_toStartOf="@id/btn_filter_pickup_region_compact_shop_list"
                    app:layout_constraintStart_toStartOf="@id/btn_filter_pickup_region_shop_list"
                    app:layout_constraintTop_toTopOf="@id/btn_filter_pickup_region_shop_list" />

                <Button
                    android:id="@+id/btn_filter_pickup_region_compact_shop_list"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/background_filter_compact_before"
                    android:enabled="false"
                    app:layout_constraintBottom_toBottomOf="@id/btn_filter_pickup_region_shop_list"
                    app:layout_constraintEnd_toEndOf="@id/btn_filter_pickup_region_shop_list"
                    app:layout_constraintStart_toEndOf="@id/tv_filter_pickup_region_title_shop_list"
                    app:layout_constraintTop_toTopOf="@id/btn_filter_pickup_region_shop_list" />

                <RelativeLayout
                    android:id="@+id/btn_filter_pickup_date_shop_list"
                    android:layout_width="97dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/background_filter_btn_effect_before"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_filter_pickup_region_shop_list"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_filter_pickup_date_title_shop_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="픽업 날짜"
                    android:textColor="#242424"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@id/btn_filter_pickup_date_shop_list"
                    app:layout_constraintEnd_toStartOf="@id/btn_filter_pickup_date_compact_shop_list"
                    app:layout_constraintStart_toStartOf="@id/btn_filter_pickup_date_shop_list"
                    app:layout_constraintTop_toTopOf="@id/btn_filter_pickup_date_shop_list" />

                <Button
                    android:id="@+id/btn_filter_pickup_date_compact_shop_list"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/background_filter_compact_before"
                    android:enabled="false"
                    app:layout_constraintBottom_toBottomOf="@id/btn_filter_pickup_date_shop_list"
                    app:layout_constraintEnd_toEndOf="@id/btn_filter_pickup_date_shop_list"
                    app:layout_constraintStart_toEndOf="@id/tv_filter_pickup_date_title_shop_list"
                    app:layout_constraintTop_toTopOf="@id/btn_filter_pickup_date_shop_list" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/sv_choice_tag_shop_list"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:layout_constraintTop_toBottomOf="@+id/sv_filter_btn_shop_list"
            android:visibility="gone"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_choice_tag_shop_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    />
            </RelativeLayout>

        </HorizontalScrollView>

        <View
            android:id="@+id/view_background_shop_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d5d5d5"
            app:layout_constraintTop_toBottomOf="@id/sv_choice_tag_shop_list"
            android:visibility="invisible"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_shop_list_shop_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sv_choice_tag_shop_list"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_filter_content_shop_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_filter_layer"
            app:layout_constraintTop_toBottomOf="@id/sv_filter_btn_shop_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_filter_default_list_shop_list"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_filter_region_list_shop_list"
                android:layout_width="match_parent"
                android:layout_height="309dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"
                />

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv_pickup_calendar_shop_list"
                android:layout_width="match_parent"
                android:layout_height="370dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:mcv_selectionMode="single"
                app:mcv_selectionColor="@color/colorPrimary"
                app:mcv_showOtherDates="defaults"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
