<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.cakeit.cakitandroid.presentation.list.shoplist.ShopListViewModel" />
    </data>
    <RelativeLayout
        android:id="@+id/cl_shop_list_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.list.shoplist.shopListActivity"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/tv_shop_title_shop_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:text="케이크가게"
            android:layout_marginTop="24dp"
            android:textSize="15sp"
            android:textColor="@color/defaultText"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/btn_shop_name_shop_list"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_chevron_compact_down"
            android:layout_marginStart="1dp"
            />

        <HorizontalScrollView
            android:id="@+id/sv_filter_btn_shop_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/tv_shop_title_shop_list"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:id="@+id/btn_filter_refresh_shop_list"
                    android:layout_width="82dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/background_filter_btn_effect_before"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        >
                        <TextView
                            android:id="@+id/tv_refresh_title_shop_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spoqa_han_sans_neo_regular"
                            android:text="초기화"
                            android:textColor="#242424"
                            android:textSize="13sp"
                            />

                        <Button
                            android:id="@+id/btn_refresh_shop_list"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_reset"
                            />
                    </LinearLayout>

                </RelativeLayout>
                <View
                    android:id="@+id/view_filter_first_shop_list"
                    android:layout_width="1dp"
                    android:layout_height="29dp"
                    android:layout_marginStart="7.5dp"
                    android:background="#eeeeee"
                    />

                <RelativeLayout
                    android:id="@+id/btn_filter_default_shop_list"
                    android:layout_width="85dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="7.5dp"
                    android:background="@drawable/background_filter_btn_effect_before"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/view_filter_first_shop_list"
                    app:layout_constraintTop_toTopOf="parent" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        android:layout_marginHorizontal="5dp"
                        >

                        <TextView
                            android:id="@+id/tv_filter_default_title_shop_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spoqa_han_sans_neo_regular"
                            android:text="기본순"
                            android:textColor="#242424"
                            android:textSize="13sp"
                            />

                        <Button
                            android:id="@+id/btn_filter_default_compact_shop_list"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/background_filter_compact_before"
                            android:enabled="false"
                            />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_filter_pickup_region_shop_list"
                    android:layout_width="97dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/background_filter_btn_effect_before"
                    android:textSize="13sp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        >
                        <TextView
                            android:id="@+id/tv_filter_pickup_region_title_shop_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/spoqa_han_sans_neo_regular"
                            android:text="픽업 지역"
                            android:textColor="#242424"
                            android:textSize="13sp"
                            />

                        <Button
                            android:id="@+id/btn_filter_pickup_region_compact_shop_list"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/background_filter_compact_before"
                            android:enabled="false"
                            />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_filter_pickup_date_shop_list"
                    android:layout_width="124dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/background_filter_btn_effect_before"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_filter_pickup_region_shop_list"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        >
                        <TextView
                            android:id="@+id/tv_filter_pickup_date_title_shop_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/spoqa_han_sans_neo_regular"
                            android:text="픽업 가능 날짜"
                            android:textColor="#242424"
                            android:textSize="13sp"
                            />

                        <Button
                            android:id="@+id/btn_filter_pickup_date_compact_shop_list"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/background_filter_compact_before"
                            android:enabled="false"
                            />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/sv_choice_tag_shop_list"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/sv_filter_btn_shop_list"
            android:visibility="gone"
            android:scrollbars="none"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_choice_tag_shop_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    />
            </RelativeLayout>

        </HorizontalScrollView>

        <View
            android:id="@+id/view_background_shop_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d5d5d5"
            android:layout_below="@+id/sv_choice_tag_shop_list"
            android:visibility="invisible"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_shop_list_shop_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/sv_choice_tag_shop_list"
            />

        <TextView
            android:id="@+id/tv_empty_shop_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:textColor="@color/accentText"
            android:text="해당 조건의 가게가 없어요\n
다른 필터로 찾아보세요!"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="8dp"
            android:visibility="gone"
            />

        <RelativeLayout
            android:id="@+id/cl_filter_content_shop_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_filter_layer"
            android:layout_below="@+id/sv_filter_btn_shop_list"
            android:visibility="gone"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_filter_default_list_shop_list"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_filter_region_list_shop_list"
                android:layout_width="match_parent"
                android:layout_height="309dp"
                android:visibility="gone"
                />

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/cv_pickup_calendar_shop_list"
                android:layout_width="match_parent"
                android:layout_height="370dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:mcv_selectionMode="single"
                app:mcv_selectionColor="@color/colorPrimary"
                app:mcv_showOtherDates="defaults"
                />

        </RelativeLayout>

    </RelativeLayout>
</layout>
