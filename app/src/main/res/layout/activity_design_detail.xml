<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.design.DesignDetailActivity">

    <data>
        <variable
            name="vm"
            type="com.cakeit.cakitandroid.presentation.design.DesignDetailViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBarLayout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_collapseMode="pin"
            android:background="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/btn_cake_detail_back"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/ic_arrow_left"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_shop_detail_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_bold"
                    android:textSize="16sp"
                    android:textColor="@color/accentText"
                    android:letterSpacing="-0.03"
                    android:gravity="center_horizontal"
                    android:text="@{vm.designDetailData.shopName}"
                    android:layout_marginTop="14dp"
                    android:ellipsize="end"
                    android:lines="1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="41dp"
                    android:layout_marginEnd="36dp"
                    app:layout_constraintStart_toEndOf="@id/btn_cake_detail_back"
                    app:layout_constraintEnd_toStartOf="@id/btn_cake_detail_zzim"/>

                <ImageButton
                    android:id="@+id/btn_cake_detail_zzim"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="@drawable/background_zzim_effect"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/left_vertical_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="24dp"/>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vp_cake_detail_img"
                    android:layout_width="match_parent"
                    android:layout_height="359dp"
                    android:background="#d8d8d8"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/pb_cake_detail_progress_bar"
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/bg_progressbar"
                    android:max="100"
                    android:progress="0"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="19dp"
                    app:layout_constraintBottom_toBottomOf="@id/vp_cake_detail_img"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/tv_cake_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_bold"
                    android:textSize="16sp"
                    android:textColor="@color/accentText"
                    android:letterSpacing="-0.03"
                    android:text="@{vm.designDetailData.name}"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/vp_cake_detail_img"
                    app:layout_constraintStart_toStartOf="@id/left_vertical_guideline"/>

                <TextView
                    android:id="@+id/tv_cake_detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_regular"
                    android:textSize="12sp"
                    android:textColor="@color/subText"
                    android:letterSpacing="-0.03"
                    android:text="@{vm.designDetailData.shopFullAddress}"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_name"
                    app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"/>

                <Button
                    android:id="@+id/btn_cake_detail_order_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_order_date"
                    android:layout_marginHorizontal="20dp"
                    android:text="@string/shop_order_availability_date"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_cake_detail_address" />


                <View
                    android:id="@+id/view_first"
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:background="@color/solidLine"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/btn_cake_detail_order_date"/>

                <TextView
                    android:id="@+id/tv_cake_detail_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_bold"
                    android:textSize="13sp"
                    android:textColor="@color/defaultText"
                    android:letterSpacing="-0.037"
                    android:text="@string/cake_information_title"
                    android:layout_marginTop="13dp"
                    app:layout_constraintTop_toBottomOf="@id/view_first"
                    app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"/>

                <View
                    android:id="@+id/view_second"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/solidLine"
                    android:layout_marginTop="11.5dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_info"/>

                <TextView
                    android:id="@+id/tv_cake_detail_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_regular"
                    android:textSize="12sp"
                    android:textColor="@color/subText"
                    android:letterSpacing="-0.034"
                    android:text="@string/cake_information_theme"
                    android:layout_marginTop="19.5dp"
                    app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"
                    app:layout_constraintTop_toBottomOf="@id/view_second"
                    />
                <TextView
                    android:id="@+id/tv_cake_detail_theme_contents"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_regular"
                    android:textSize="12sp"
                    android:textColor="@color/defaultText"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="4dp"
                    android:text="@{vm.designDetailData.themeNames}"
                    android:layout_marginTop="19.5dp"
                    android:layout_marginStart="67dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toBottomOf="@id/view_second"
                    app:layout_constraintStart_toEndOf="@id/tv_cake_detail_theme"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_cake_detail_size_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_regular"
                    android:textSize="12sp"
                    android:textColor="@color/subText"
                    android:letterSpacing="-0.03"
                    android:text="@string/cake_information_price_by_size"
                    android:layout_marginTop="12dp"
                    app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"
                    app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_theme_contents"
                    />
                <TextView
                    android:id="@+id/tv_cake_detail_size_price_contents"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_regular"
                    android:textSize="12sp"
                    android:textColor="@color/defaultText"
                    android:letterSpacing="-0.03"
                    android:text="default"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="67dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_theme_contents"
                    app:layout_constraintStart_toEndOf="@id/tv_cake_detail_theme"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_cake_detail_cream_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_regular"
                    android:textSize="12sp"
                    android:textColor="@color/subText"
                    android:letterSpacing="-0.03"
                    android:text="@string/cake_information_cream_type"
                    android:layout_marginTop="12dp"
                    app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"
                    app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_size_price_contents"
                    />
                <TextView
                    android:id="@+id/tv_cake_detail_cream_type_contents"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_regular"
                    android:textSize="12sp"
                    android:textColor="@color/defaultText"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="4dp"
                    android:text="@{vm.designDetailData.creamNames}"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="67dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_size_price_contents"
                    app:layout_constraintStart_toEndOf="@id/tv_cake_detail_theme"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/tv_cake_detail_sheet_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_regular"
                    android:textSize="12sp"
                    android:textColor="@color/subText"
                    android:letterSpacing="-0.03"
                    android:text="@string/cake_information_sheet_type"
                    android:layout_marginTop="12dp"
                    app:layout_constraintLeft_toLeftOf="@id/left_vertical_guideline"
                    app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_cream_type_contents"
                    />
                <TextView
                    android:id="@+id/tv_cake_detail_sheet_type_contents"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_regular"
                    android:textSize="12sp"
                    android:textColor="@color/defaultText"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="4dp"
                    android:text="@{vm.designDetailData.sheetNames}"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="67dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_cream_type_contents"
                    app:layout_constraintStart_toEndOf="@id/tv_cake_detail_theme"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <RelativeLayout
                    android:id="@+id/rl_cake_detail_connect"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="20dp"
                    android:letterSpacing="-0.03"
                    android:background="@drawable/bg_connect_shop"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_cake_detail_sheet_type_contents"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_kakao_channel"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#ffffff"
                            android:text="@string/shop_connect"
                            android:layout_marginStart="6dp"
                            />
                    </LinearLayout>

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>