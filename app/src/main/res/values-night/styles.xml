<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#ffffff</item>                                <!-- 배경 -->

        <item name="android:textColorPrimary">@color/colorPrimary</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@color/colorPrimary</item>     <!-- 탭바 텍스트 -->

        <item name="colorAccent">@color/colorPrimary</item>                    <!-- 하단 움직이는 바 색-->
    </style>

</resources>